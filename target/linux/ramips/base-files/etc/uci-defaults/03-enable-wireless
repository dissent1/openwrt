#!/bin/sh
#
# Copyright (C) 2016 OpenWrt.org
#

[ ! -e /etc/config/wireless ] && exit 0

. /lib/functions/system.sh

board=$(board_name)

case "$board" in
mir3g|\
mir3g-nor)
	uci set wireless.@wifi-device[0].disabled=0
	uci set wireless.@wifi-device[0].channel=11
	uci set wireless.@wifi-device[0].txpower=20
	uci set wireless.@wifi-device[0].legacy_rates=0
	uci set wireless.@wifi-iface[0].disassoc_low_ack=0
	uci set wireless.@wifi-device[1].disabled=0
	uci set wireless.@wifi-device[1].channel=36
	uci set wireless.@wifi-device[1].txpower=20
	uci set wireless.@wifi-device[1].legacy_rates=0
	;;
esac

uci commit wireless

exit 0
